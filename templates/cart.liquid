<section class="sec18">
  <div class="container">
    <div class="title">SHOPPING CART</div>
    <div class="cart">
      {% form 'cart'
        , cart %}
        <div class="top">
          <div class="item product">Product</div>
          <div class="block">
            <div class="item price">Price</div>
            <div class="item quantity">Quantity</div>
            <div class="item total">Total</div>
          </div>
        </div>
        <div class="products">
          {% for product in cart.items %}
            <div class="cart_product cart-item" data-key="{{ product.key }}">
              <div class="image">
                <img src="{{ product.image |  image_url}}" alt="">
              </div>
              <div class="block">
                <div class="name product">
                  {{ product.title }}
                </div>
                <div class="price">
                  {{ product.price | money}}
                </div>
                <div class="quantity">
                  <div class="counter">
                    <span class="down" style="cursor: pointer;" >
                      <svg
                        width="20"
                        height="21"
                        viewBox="0 0 20 21"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <g clip-path="url(#clip0_4094_2113)">
                          <path
                            d="M3.125 10.5H16.875"
                            stroke="black"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                        </g>
                        <defs>
                          <clipPath id="clip0_4094_2113">
                            <rect
                              width="20"
                              height="20"
                              fill="white"
                              transform="translate(0 0.5)" />
                          </clipPath>
                        </defs>
                      </svg>
                    </span>
                    <input type="text" class="quantity-input" value="{{ product.quantity }}">
                    <span class="up" style="cursor: pointer;">
                      <svg
                        width="20"
                        height="21"
                        viewBox="0 0 20 21"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <g clip-path="url(#clip0_4094_2116)">
                          <path
                            d="M3.125 10.5H16.875"
                            stroke="black"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                          <path
                            d="M10 3.625V17.375"
                            stroke="black"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round" />
                        </g>
                        <defs>
                          <clipPath id="clip0_4094_2116">
                            <rect
                              width="20"
                              height="20"
                              fill="white"
                              transform="translate(0 0.5)" />
                          </clipPath>
                        </defs>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
              <div class="total">
                {{ product.line_price | money }}
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="bot">
          <div class="subtotal">SUBTOTAL</div>
          <span class="subtotal-field">{{ cart.total_price |  money}}</span>
        </div>
        <p>Tax included and shipping calculated at checkout</p>
        <div class="buttons">
          <a href="javascript:history.back()" class="cart-button">continue shopping</a>
          <button class="cart-button" type="submit" name="checkout">Check out</button>
        </div>
      {% endform %}
    </div>
  </div>
</section>

<style>
  footer .container form {
    display: none;
  }
  footer .container {
    margin-top: 0;
  }
</style>
