  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const ageModal = document.getElementById('ageModal');
      const ageQuestion = document.getElementById('ageQuestion');
      const dobQuestion = document.getElementById('dobQuestion');
      const over21Btn = document.getElementById('yes');
      const under21Btn = document.getElementById('no');
      const confirmBtn = document.querySelector('.confirm');
      const dobMonthInput = document.getElementById('dobMonth');
      const dobDayInput = document.getElementById('dobDay');
      const dobYearInput = document.getElementById('dobYear');


      if (localStorage.getItem('visitedBefore') == 'true') {

    ageModal.style.display = localStorage.getItem('over21') == 'true' ? 'none' : 'block';
      } else {
    ageModal.style.display = 'block';
    localStorage.setItem('visitedBefore', 'true');
      }


      function closeModal() {
    ageModal.style.display = 'none';
      }


      function showDobQuestion() {
    ageQuestion.style.display = 'none';
    dobQuestion.style.display = 'block';
      }


      over21Btn.addEventListener('click', function() {
        closeModal();
    // showDobQuestion();
    localStorage.setItem('over21', 'true');
      });


      under21Btn.addEventListener('click', function() {
    window.location.href = "https://www.google.com";
    localStorage.removeItem('over21'); 
      });


      confirmBtn.addEventListener('click', function() {
    const dobMonth = parseInt(dobMonthInput.value);
    const dobDay = parseInt(dobDayInput.value);
    const dobYear = parseInt(dobYearInput.value);


    if (isNaN(dobMonth) || isNaN(dobDay) || isNaN(dobYear)) {
      alert('Please enter valid numbers for the date of birth.');
      return;
    }


    if (dobMonth < 1 || dobMonth > 12 || dobDay < 1 || dobDay > 31 || dobYear < 1900 || dobYear > new Date().getFullYear()) {
      alert('Please enter a valid date of birth.');
      return;
    }

    const dob = new Date(dobYear, dobMonth - 1, dobDay);
    const age = calculateAge(dob);

    if (age >= 21) {
      closeModal();
      localStorage.setItem('over21', 'true');
    } else {
      alert('Sorry, you must be at least 21 years old to enter this site.');
      window.location.href = "https://www.google.com";
      localStorage.removeItem('over21'); 
    }
      });


      function calculateAge(birthday) {
    const today = new Date();
    const diff = today - birthday;
    const ageDate = new Date(diff);
    return Math.abs(ageDate.getUTCFullYear() - 1970);
      }


      dobMonthInput.addEventListener('input', function() {
    this.value = this.value.replace(/\D/g, '').slice(0, 2);
      });

      dobDayInput.addEventListener('input', function() {
    this.value = this.value.replace(/\D/g, '').slice(0, 2);
      });

      dobYearInput.addEventListener('input', function() {
    this.value = this.value.replace(/\D/g, '').slice(0, 4);
      });
    });

  </script>